        <Label Content="" HorizontalAlignment="Left" Margin="26,175,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Label Content="Informacion del profesor" HorizontalAlignment="Left" Margin="751,142,0,0" VerticalAlignment="Top" FontSize="31" FontWeight="Bold"/>
        <Label x:Name="ProfessorName" Content="Label" HorizontalAlignment="Left" Margin="494,301,0,0" VerticalAlignment="Top" FontSize="24" Width="210"/>
        <Label Content="Nombre:" HorizontalAlignment="Left" Margin="486,247,0,0" VerticalAlignment="Top" FontSize="27"/>
        <Label Content="Apellido paterno:" HorizontalAlignment="Left" Margin="489,384,0,0" VerticalAlignment="Top" FontSize="27"/>
        <Label x:Name="ProfessorMiddleName" Content="Label" HorizontalAlignment="Left" Margin="494,437,0,0" VerticalAlignment="Top" FontSize="24" Width="210"/>
        <Label Content="Apellido materno:" HorizontalAlignment="Left" Margin="489,529,0,0" VerticalAlignment="Top" FontSize="27"/>
        <Label x:Name="ProfessorLastName" Content="Label" HorizontalAlignment="Left" Margin="494,589,0,0" VerticalAlignment="Top" FontSize="24" Width="210"/>
        <Label Content="Numero de personal:" HorizontalAlignment="Left" Margin="489,668,0,0" VerticalAlignment="Top" FontSize="27"/>
        <Label x:Name="ProfessorTuition" Content="Label" HorizontalAlignment="Left" Margin="494,726,0,0" VerticalAlignment="Top" FontSize="24" Width="256"/>
        <Label Content="Correo:" HorizontalAlignment="Left" Margin="1096,252,0,0" VerticalAlignment="Top" FontSize="27"/>
        <Label x:Name="Email" Content="Label" HorizontalAlignment="Left" Margin="1112,302,0,0" VerticalAlignment="Top" FontSize="24" Width="198"/>
        <Label Content="Tipo de contrato:" HorizontalAlignment="Left" Margin="1096,384,0,0" VerticalAlignment="Top" FontSize="27"/>
        <Label x:Name="ContractType" Content="Label" HorizontalAlignment="Left" Margin="1112,437,0,0" VerticalAlignment="Top" FontSize="24"/>
        <Label Content="Categoria:" HorizontalAlignment="Left" Margin="1096,529,0,0" VerticalAlignment="Top" FontSize="27"/>
        <Label x:Name="Category" Content="Label" HorizontalAlignment="Left" Margin="1112,580,0,0" VerticalAlignment="Top" FontSize="24"/>
        <Button Content="Regresar" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Top" Height="48" Width="189" 
            Click="Back_Click" BorderBrush="#FFED5B5B" Background="#FFED5B5B" Margin="1245,747,0,0" Cursor="Hand" Foreground="White"/>


    </Grid>
