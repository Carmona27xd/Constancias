        <Image HorizontalAlignment="Left" Height="64" MouseLeftButtonDown="IrAProfesores" Cursor="Hand" Margin="35,292,0,0" VerticalAlignment="Top" Width="100" Source="pack://application:,,,/Imagenes/IconProfesor.png"/>

        <Button Content="Cerrar sesión" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Top" Height="51" Width="163" 
